{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="text-align: center;">{{ 'main.pages'|trans }}</h1>
    <hr>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr class="bg-secondary">
            <th>{{ 'appellation'|trans }}</th>
            <th>{{ 'active'|trans }}</th>
            <th>{{ 'public'|trans }}</th>

            <th>{{ 'actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.name }}</td>
                <td>{% if page.active %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>
                <td>{% if page.public %}{{ 'yes'|trans }}{% else %}{{ 'no'|trans }}{% endif %}</td>

                <td>
                    <a class="btn-info btn" href="{{ path('page_show', { 'id': page.id }) }}"><i
                                style="margin-right: 10px;" class="fa fa-navicon"></i>{{ 'details'|trans }}</a>
                    <a class="btn-info btn" href="{{ path('page_edit', { 'id': page.id }) }}"> <i
                                style="margin-right: 10px;" class="fa fa-edit"></i>{{ 'edit'|trans }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr>
    {% if is_granted('ROLE_ADD_PAGE') %}

        <a class="btn-primary btn" href="{{ path('page_new') }}"><i
                    class="fa fa-plus"></i> {{ 'create.new.page'|trans }}
        </a>
        <hr>
    {% endif %}
{% endblock %}
