{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subpage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subPage.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if subPage.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ subPage.content }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ subPage.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subpage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subpage_edit', { 'id': subPage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
